package org.jsmith.mvc.error{	public class MVCError extends Error implements IMVCError	{		public var innerError:IMVCError;		public var type:String;				public function MVCError(type:String = "", s:String = "", innerError:IMVCError = null)		{			super(s);						this.name = "MVC Error";			this.type = type;			this.innerError = innerError;					}//end constructor				/**		 * 	Gets the appropriate error message from the <code>MVCErrorCodes</code> class.		 * 		 *  @returns A string representing the error message.		 */		private function getErrorMessage():String		{			var errorMessage:String = name + " :: " + MVCErrorCodes.messages[type];			errorMessage += (message != "") ? ": " + message : "";						return errorMessage;					}//end method				/**		 * 	Returns an error message representing the type of <code>MVCError</code> encountered.		 */		public function toString():String		{			var errorMessage:String = getErrorMessage();						if(innerError)				errorMessage += "\n\t:: " + innerError;							return errorMessage;					}//end method			}//end class	}//end package